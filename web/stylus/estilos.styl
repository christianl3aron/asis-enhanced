@import "normalize.styl"
@import "fonts.styl"

html
  font-size 16px

body
  font-family "Trebuchet MS", Helvetica, sans-serif

menu
  margin 0
  padding 0
  color white
  & ul
    list-style none
    margin 0
    padding 0

figure
  margin 0
  height 100%

img
  vertical-align top

.logo
  padding 8px

.item-menu
  height 64px

.button-menu
  text-decoration none
  position relative
  display block
  height 100%
  &:hover
    background-color #DFB636

.icon
  text-align center
  padding-top 11px

.sidebar
  background-color #383838
  width 64px
  height 100%
  display inline-block

.content
  background-color darkorange
  width 100%
  height 100%
  display inline-block

.white
    background-color white




